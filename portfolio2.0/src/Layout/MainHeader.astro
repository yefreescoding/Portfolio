---
//import components
import Nav from '../Components/Nav.astro';
---

<header class="header">
  <!--* LOGO contenedor *-->
  <div class="header__home">
    <a href="/" class="nav__links" aria-label="Go Home"> yefree Valdez</a>
  </div>
  <Nav />
  <button id="toggle-mobile-menu" class="nav__mobile">
    <img
      class="menu-img"
      data-dark="true"
      src="/images/icons/more.avif"
      alt="icon-menu"
    />
  </button>
</header>

<style lang="scss" is:global>
  /* ============================= */
  /* ============================= */
  .header,
  .nav__ul,
  .header__home {
    display: flex;
  }

  .header__home,
  .nav,
  .nav__ul,
  .header__switch {
    padding: 0.5rem 1rem;
    height: 100%;
  }

  .header__home,
  .header__switch,
  .nav__links {
    flex: 1;
    text-transform: capitalize;
    font-weight: 600;
    color: var(--clr-text-1);
  }

  .header {
    align-items: center;
    z-index: 9999;
    justify-content: space-between;
    position: fixed;
    inset: 5px 20px auto 20px;
    border-radius: 1rem;
    border: solid 2px var(--clr-border-2);
    box-shadow: 4px 4px 0 var(--clr-border-2);
    background-color: var(--clr-background-2);
    padding: 0.5rem 1rem;
  }

  .nav__mobile {
    width: 3rem;
    border-radius: 0.3rem;
    border: 2px solid var(--clr-border-2);
    padding: 5px;
    aspect-ratio: 1;
    z-index: 9999;
    background-color: transparent;
    transition: all 0.17s linear;
    img {
      width: 100%;
      &[data-dark='false'] {
        filter: invert(100%);
      }
    }
    @media (min-width: 40em) {
      display: none;
    }
  }
</style>
