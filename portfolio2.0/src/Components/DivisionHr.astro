---
import { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'a'> {
  topText?: boolean;
  bottomText?: boolean;
}

const { topText = true, bottomText = true } = Astro.props;
---

<div class="banner">
  {
    topText && (
      <div class="text text-top rotate-2">
        <p>
          Trabajo en equipo • Colaborativo • Comunicacion efectiva • Resolucion
          de problemas • Pensamiento Crítico y Analítico • Atencion al detalle •
          Creativo •
        </p>
      </div>
    )
  }
  {
    bottomText && (
      <div class="text text-bottom -rotate-2">
        <p>
          <span class="text-5xl font-bold">UDEMY</span> Python sin fronteras:
          HTML, CSS, Flask y MySQL • <span class="text-5xl font-bold">18</span>{' '}
          Code wars katas completados •{' '}
          <span class="text-5xl font-bold">566</span> Contribuciones en Github •
          <span class="text-5xl font-bold">+500</span> puntos Front End Mentor
        </p>
      </div>
    )
  }
</div>

<style>
  .banner {
    overflow: hidden;
    display: grid;
    place-content: center;
    position: relative;
    inset: 0;
    margin: 5vh 0;
    width: 100%;
    max-width: 100vw;
    height: 100%;
    background-color: transparent;
    color: var(--text);
  }

  .banner .text {
    padding: 1rem;
  }

  .text-top {
    z-index: 1;
    background-color: var(--clr-background-3);
  }

  .text-bottom {
    background-color: #171717;
    color: #ffff;
  }

  .banner .text p {
    font-size: 2rem;
    white-space: nowrap;
    text-align: center;
    position: relative;
    animation-duration: 100s;
    animation-direction: normal;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  .text-top p {
    animation-name: moveBanner;
  }

  .text-bottom p {
    animation-name: moveBanner-back;
  }

  @keyframes moveBanner {
    0% {
      left: 50%;
    }
    100% {
      left: -900px;
    }
  }

  @keyframes moveBanner-back {
    0% {
      left: -900px;
    }
    100% {
      left: 50%;
    }
  }
</style>
