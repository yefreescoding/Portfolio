---
//import components
import Nav from "../Components/Nav.astro";
import MobileNav from "../Components/MobileNav.astro";
---

<header class="header" aria-label="Cabecera de la pagina">
  <MobileNav>
    <Nav />
  </MobileNav>
</header>

<style lang="scss" is:global>
  .header,
  .nav__ul,
  .header__home {
    display: flex;
  }

  .header__switch,
  .nav__links {
    text-transform: capitalize;
    font-weight: 600;
    color: var(--clr-text-1);
  }

  .header {
    width: fit-content;
    align-items: center;
    z-index: 9999;
    position: sticky;
    top: 0.5rem;
    margin-left: auto;
    margin-right: 1rem;
    border-radius: 6rem;
    border: solid 1px var(--clr-border-2);
    background-color: var(--clr-text-3);
    padding: 0.5rem 1rem;
    transition: all 300ms ease-in-out;
  }

  .nav__mobile {
    isolation: isolate;
    width: 3rem;
    border-radius: 0.3rem;
    padding: 5px;
    aspect-ratio: 1;
    z-index: 9999;
    background-color: transparent;
    transition: all 0.17s linear;
    img {
      z-index: -1;
      width: 100%;
      &[data-dark="false"] {
        filter: invert(100%);
      }
    }
    @media (min-width: 53.4375em) {
      display: none;
    }
  }
</style>
