---
import { Image } from "astro:assets";

// Library imports
import { Icon } from "astro-icon";

const subjectImage = "/images/hero-images/Subject.jpg";
const iconVerify = "/images/icons/verify.png";

// import Layouts
import MainLayout from "../Layout/MainLayout.astro";
---

<MainLayout subtitle="About">
  <section id="about" class="section_about">
    <header
      aria-label="Cabecera sobre mi"
      class="flex items-center gap-4 mb-8 p-6"
    >
      <div class="flex justify-between items-end my-4">
        <Image
          src={subjectImage}
          alt="Mi foto"
          width="10"
          height="10"
          class="w-20 h-20 aspect-square rounded-full shadow-lg object-cover"
          decoding="async"
          loading="lazy"
        />
      </div>
      <div class="grid grid-flow-row">
        <div class="flex flex-col">
          <div class="flex items-center gap-1">
            <h1 class="text-lg md:text-xl font-base">Yefree Valdez</h1>
            <Image
              src={iconVerify}
              alt="Icon twitter"
              width="10"
              height="10"
              class="w-4 h-4 rounded-full shadow-sm object-cover block"
              decoding="async"
              loading="lazy"
            />
          </div>
          <p class="text-base">Desarrollador front end. Madrid.</p>
          <a
            href=""
            target="_blank"
            class="text-[#0077b5] bg-slate-200 rounded-xl w-fit px-2 my-2 transition-all hover:shadow-lg"
            >Perfil LinkedIn</a
          >
        </div>
      </div>
      <div aria-label="Cuerpo sobre mi"></div>
    </header>
    <ul class="flex flex-col gap-8 w-fit">
      <li class="flex flex-col gap-4">
        <h2 class="text-3xl">Experiencia</h2>
        <ul class="flex flex-col gap-4">
          <li class="flex items-center gap-8">
            <p class="text-base">2023 - Now</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Freelance Front End Developer</a
            >
          </li>
          <li class="flex items-center gap-8">
            <p class="text-base">2023 - Now</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Freelance Programming Teacher</a
            >
          </li>
          <li class="flex items-center gap-8">
            <p class="text-base">2023 - 2023</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Practicas Equipo de Desarrollo</a
            >
          </li>
        </ul>
      </li>
      <li class="flex flex-col gap-4">
        <h2 class="text-3xl">Proyectos/Open Source</h2>
        <ul class="flex flex-col gap-4">
          <li class="flex items-center gap-8">
            <p class="text-base">2023 - Now</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Overthink</a
            >
          </li>
          <li class="flex items-center gap-8">
            <p class="text-base">2023 - Now</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Floating scroll componet</a
            >
          </li>
        </ul>
      </li>
      <li class="flex flex-col gap-4">
        <h2 class="text-3xl">Educacion</h2>
        <ul class="flex flex-col gap-4">
          <li class="flex items-center gap-8">
            <p class="text-base">2023</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Desaroolo de aplicaciones con tecnologias web.</a
            >
          </li>
          <li class="flex items-center gap-8">
            <p class="text-base">2022</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Curso de dise√±o y maquetacion de paginas web</a
            >
          </li>
          <li class="flex items-center gap-8">
            <p class="text-base">2022</p>
            <a href="/" target="_blank" class="flex-2 justify-self-start"
              >Introdccion a python</a
            >
          </li>
        </ul>
      </li>
    </ul>
  </section>

  <style lang="scss" is:global>
    .section_about {
      width: min(100% - 2rem, 70ch);
      margin-inline: auto;
    }
  </style>
</MainLayout>
