---
import { Image } from "astro:assets";

// Library imports
import { Icon } from "astro-icon";

import Cover from "../Components/Cover.astro";

const subjectImage = "/images/hero-images/Subject.jpg";
const iconVerify = "/images/icons/verify.png";

// import Layouts
import MainLayout from "../Layout/MainLayout.astro";
import SectionGrid from "../Components/SectionGrid.astro";
---

<MainLayout subtitle="About">
  <Cover
    coverTitle="Hola 👋"
    description="Soy Yefree, ingeniero de software dominicano – Este es mi espacio para mostrar trabajos, experiencias y hobbies. Explora, disfruta y contácteme si te gusta lo que ves. Tip: Haz click el botoncito verde del header arriba ☝️😉."
  >
    <Image
      width="10"
      height="10"
      src={"/images/hero-images/about-img.jpeg"}
      class="w-full h-[420px] object-cover object-center rounded-xl"
      decoding="async"
      loading="lazy"
      alt="Modern Concept Hero"
    />
  </Cover>
  <SectionGrid>
    <Image
      width="10"
      height="10"
      src={"/images/hero-images/about-img-3.JPG"}
      class="w-full h-[620px] object-cover object-bottom rounded-xl"
      decoding="async"
      loading="lazy"
      alt="A photo of a landscape with a mountain, a cow and some trees in the background"
    />
    <Image
      width="10"
      height="10"
      src={"/images/hero-images/about-img-2.JPG"}
      class="w-full h-[620px] object-cover object-bottom rounded-xl"
      decoding="async"
      loading="lazy"
      alt="A photo of a landscape with a mountain, a cow and some trees in the background"
    />
  </SectionGrid>
  <style lang="scss" is:global></style>
</MainLayout>
