---
interface Props {
  name: string;
  description?: string;
  link: string;
  github: string;
  imagesrc: string;
}

const { name, description, link, github, imagesrc } = Astro.props as Props;
---

<article
  id="project-display"
  class="text-center relative isolate shadow-lg rounded-2xl flex flex-col align-top hover:shadow-xl transition-all"
>
  <a href={link} target="_blank">
    <div class="article__text p-6">
      <h3 id="proj-title" class="font-extrabold mb-2">{name}</h3>
      <p id="proj-desc" class="text-base">{description}</p>
    </div>
    <div class="article__imgage">
      <img src={imagesrc} alt="" class="w-full object-cover aspect-video" />
    </div>
  </a>
</article>

<style>
  article {
    background-color: var(--clr-text-3);
    border: 1px solid var(--clr-border-2);
    direction: ltr;
  }

  .article__imgage {
    /* position: relative; */
    border-radius: 1rem;
    box-shadow: 0 0 16px var(--clr-box-shd);
    transform: translateY(70px);
    transition: transform 200ms ease-in-out;
    margin-inline: 1rem;
    overflow: hidden;
  }

  .article__imgage img {
    /* aspect-ratio: 2; */
  }

  article:hover .article__imgage {
    transform: translateY(40px);
  }
</style>
