---
interface Props {
  videoSrc: string;
  type: "mp4" | "webm" | "mov";
}

const { videoSrc, type } = Astro.props;
---

<video
  preload="none"
  poster="one-does-not-simply-placeholder.jpg"
  autoplay
  playsinline
  muted
  loop
>
  <source src={videoSrc} type={`video/${type}`} />
  Your browser does not support the video tag.
</video>
